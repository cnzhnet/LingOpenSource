{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Database": {
    "SQLServer": {
      "ConnectionPool": 20, // 连接池最大数量.
      "ConnectionString": ""
    },
    "SQLite3": {
      "ConnectionString": "Data Source={contentroot}\\db_sqlite\\wdak.sqlite3;"
    },
    "MySQL": {
      "ConnectionPool": 20, // 连接池最大数量.
      "ConnectionString": ""
    },
    "PostgreSQL": {
      "ConnectionPool": 20, // 连接池最大数量.
      "ConnectionString": ""
    }
  },
  "FormOptions": {
    "MultipartBodyLengthLimit": 1024000000 // http post 上传的最大长度限制.
  },
  "ForwardedHeadersOptions": {
    "KnownProxies": [ "127.0.0.1", "192.168.1.9", "192.168.1.39" ] // 受信任的反向代理转接头.
  },
  "ServerUrls": {
    "Enabled": false,
    "Urls": "http://*:80",
    "DomainName": "www.cnzhnet.net"
  }
}
